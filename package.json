{
  "name": "basic",
  "type": "module",
  "scripts": {
    "start": "node dist/server.mjs",
    "dev": "vite",
    "email:dev": "vite-node ./app/mail-job.ts",
    "email:server": "vite build --mode email-queue && node dist/mail.mjs",
    "email:start": "node dist/mail.mjs",
    "build": "vite build --mode client && vite build --mode email-queue && vite build",
    "preview": "wrangler pages dev ./dist",
    "deploy": "$npm_execpath run build && wrangler pages deploy ./dist",
    "db:serve": "./app/pocketbase/pocketbase serve",
    "postinstall": "patch-package",
    "generate_encryption_keys": "node ./app/lib/encryption-key-gen.js"
  },
  "private": true,
  "dependencies": {
    "@aws-sdk/client-ses": "^3.556.0",
    "@hono/node-server": "^1.11.1",
    "bcrypt": "^5.1.1",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "hono": "^4.2.7",
    "honox": "^0.1.15",
    "jsx-email": "^1.12.0",
    "mail-time": "^3.0.0",
    "nodemailer": "^6.9.13",
    "patch-package": "^8.0.0",
    "pocketbase": "^0.21.2",
    "ramda": "^0.29.1",
    "redis": "^4.6.13",
    "sns-payload-validator": "^2.1.0",
    "vite-node": "^1.6.0",
    "zod": "^3.23.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240403.0",
    "@flydotio/dockerfile": "^0.5.6",
    "@hono/vite-cloudflare-pages": "^0.2.4",
    "@hono/vite-dev-server": "^0.11.0",
    "@types/react": "^18.2.79",
    "chalk": "^5.3.0",
    "daisyui": "^4.10.2",
    "vite": "^5.0.12",
    "wrangler": "^3.47.0"
  }
}
